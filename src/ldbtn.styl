.ld-ext-right, .ld-ext-left, .ld-ext-bottom, .ld-ext-top, .ld-over, .ld-over-inverse, .ld-over-full, .ld-over-full-inverse
  position: relative
  transition: all .3s
  transition-timing-function: ease-in
  & > .ld
    position: absolute
    top: 50%
    left: 50%
    margin: -.5em
    opacity: 0
    z-index: -100
    transition: all .3s
    transition-timing-function: ease-in
  &.running > .ld
    opacity: 1
    z-index: auto
    visibility: visible

.ld-ext-right.running
  padding-right: 2.5em!important
.ld-ext-right > .ld
  top: 50%
  left: auto
  right: 1em

.ld-ext-left.running
  padding-left: 2.5em!important
.ld-ext-left > .ld
  top: 50%
  right: auto
  left: 1em

.ld-ext-bottom.running
  padding-bottom: 2.5em!important
.ld-ext-bottom > .ld
  top: auto
  left: 50%
  bottom: 1em

.ld-ext-top.running
  padding-top: 2.5em!important
.ld-ext-top > .ld
  bottom: auto
  left: 50%
  top: 1em

.ld-over, .ld-over-inverse, .ld-over-full, .ld-over-full-inverse
  &.running > .ld
    z-index: 99999
  &:before
    content: " "
    display: block
    opacity: 0
    position: absolute
    z-index: -1
    top: 0
    left: 0
    width: 100%
    height: 100%
    transition: all .3s
    transition-timing-function: ease-in
    background: rgba(240,240,240,0.8)

.ld-over-full.running, .ld-over-full-inverse.running
  & > .ld, &:before
    position: fixed

.ld-over-full > .ld
  color: rgba(0,0,0,0.8)

.ld-over-full:before, .ld-over-full-inverse:before
  z-index: -1
  background: rgba(255,255,255,0.8)

.ld-over, .ld-over-inverse, .ld-over-full, .ld-over-full-inverse
  &.running
    & > .ld { z-index: 10001 }
    &:before
      opacity: 1
      z-index: 10000
      display: block

.ld-over-inverse
  & > .ld
    color: rgba(255,255,255,0.8)
  &:before
    background: rgba(0,0,0,0.6)

.ld-over-full-inverse
  & > .ld
    color: rgba(255,255,255,0.8)
  &:before
    background: rgba(0,0,0,0.6)
